<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo333"


    tools:context=".SanteAcademia">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:orientation="vertical"
            android:weightSum="1"
            >

            <ImageView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="200dp"
                android:background="@drawable/logacademia_sante"
                android:scaleType="fitCenter"
                android:textStyle="bold"
                android:typeface="serif" />





            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="O melhor lugar para sua saúde"
                android:textAlignment="center"
                android:textColor="#ffc400"
                android:textSize="25sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">


                <ImageView
                    android:layout_width="340dp"
                    android:layout_height="200dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/sante1"
                    android:text="Ligue para nós" />
            </RelativeLayout>


            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saiba as vantagéns de ser nosso cliente!"
                android:textAlignment="center"
                android:textColor="#ffc400"


                android:textSize="25sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">


                <ImageView
                    android:layout_width="340dp"
                    android:layout_height="200dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/sante2"
                    android:text="Ligue para nós" />
            </RelativeLayout>


            <TextView

                android:textSize="25sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Avaliação Fisica  Computadorizada"
                android:textAlignment="center"
                android:textColor="#ffc400"

                android:textStyle="bold"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">


                <ImageView
                    android:layout_width="340dp"
                    android:layout_height="200dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/sante3"
                    android:text="Ligue para nós" />
            </RelativeLayout>
            <TextView

                android:textSize="30sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AQUI VOCE IRA ENCONTRAR:"
                android:textAlignment="center"
                android:textColor="#ffc400"
                android:textStyle="bold" />
            <TextView

                android:textSize="25sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ar Condicionado - Treinamento Funcional"
                android:textAlignment="center"
                android:textColor="#ffc400"
                />

            <TextView

                android:textSize="25sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Acompanhamento de Resultados"
                android:textAlignment="center"
                android:textColor="#ffc400"
                />

            <TextView

                android:textSize="25sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Centro de Lutas - Studio de Pilates"
                android:textAlignment="center"
                android:textColor="#ffc400"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">


                <ImageView
                    android:layout_width="340dp"
                    android:layout_height="200dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/sante4"
                    android:text="Ligue para nós" />
            </RelativeLayout>



            <TextView

                android:textSize="17sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Salão de Cabeleleiro - Grupos de Corrida"
                android:textAlignment="center"
                android:textColor="#ffc400"
                />


            <TextView

                android:textSize="25sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bistro Santé- Aulas Variadas de Danças"
                android:textAlignment="center"
                android:textColor="#ffc400"
                />


            <TextView

                android:textSize="25sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Padão Internacional de Aulas Coletivas"
                android:textAlignment="center"
                android:textColor="#ffc400"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">


                <ImageView
                    android:layout_width="340dp"
                    android:layout_height="200dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/sante5"
                    android:text="Ligue para nós" />
            </RelativeLayout>
            <TextView

                android:textSize="25sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Internet Wifi - Valet Gratuito"
                android:textAlignment="center"
                android:textColor="#ffc400"
                />


            <TextView

                android:textSize="25sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Podologo - Nutricionista"
                android:textAlignment="center"
                android:textColor="#ffc400"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="17sp"

                android:textColor="#ffc400"
                />





            <RelativeLayout
                android:layout_width="600dp"
                android:layout_height="91dp">


                <ImageView
                    android:id="@+id/imageView"
                    android:onClick="insta"

                    android:layout_width="68dp"
                    android:layout_height="90dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/logo_insta"
                    android:text="Ligue para nós" />


                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="68dp"
                    android:layout_height="90dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@+id/imageView"
                    android:layout_toRightOf="@+id/imageView"
                    android:src="@drawable/logo_fb"
                    android:onClick="face"
                    android:text="Ligue para nós" />

                <ImageView
                    android:layout_width="68dp"
                    android:layout_height="90dp"
                    android:layout_alignLeft="@+id/imageView5"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/imageView5"
                    android:layout_marginLeft="71dp"
                    android:layout_marginStart="71dp"
                    android:src="@drawable/logo_google"
                    android:text="Ligue para nós"
                    android:onClick="google"
                    android:id="@+id/imageView6" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:onClick="what"
                    android:layout_width="68dp"
                    android:layout_height="90dp"
                    android:layout_alignBottom="@+id/imageView6"
                    android:layout_toEndOf="@+id/imageView6"
                    android:layout_toRightOf="@+id/imageView6"
                    android:src="@drawable/logo_whatsapp"
                    android:text="Ligue para nós" />

                <ImageView
                    android:id="@+id/ideMaill"
                    android:onClick="email"
                    android:layout_width="68dp"
                    android:layout_height="90dp"
                    android:layout_alignTop="@+id/imageView7"
                    android:layout_toEndOf="@+id/imageView7"
                    android:layout_toRightOf="@+id/imageView7"
                    android:src="@drawable/emaillogo"
                    android:text="Ligue para nós" />


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="91dp">

                <EditText
                    android:id="@+id/idNumtxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="89dp"
                    android:ems="10"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/idbtnCall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textAlignment="center"
                    android:textColor="#000FFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:onClick="btnCall"
                    android:text="Telefonar escritorio lapa"/>

                <Button
                    android:id="@+id/idbtnCall2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/idbtnCall"
                    android:fontFamily="sans-serif"
                    android:onClick="btnCall2"
                    android:text="Telefonar escritorio Pirituba"
                    android:textAlignment="center"
                    android:textColor="#000FFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:typeface="serif" />


            </RelativeLayout>




        </LinearLayout>
    </ScrollView>


    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slImages"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <com.daimajia.slider.library.Indicators.PagerIndicator
        android:id="@+id/custom_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:layout_marginTop="-15dp"
        />

    <ImageView
        android:id="@+id/btnaudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="187dp"
        android:background="@drawable/audiotexto"
        android:text="AudioTexto" />


</RelativeLayout>







