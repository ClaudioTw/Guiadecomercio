<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo333"

    tools:context=".Cacavaza1">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:orientation="vertical"
            android:weightSum="1"
            >

            <RelativeLayout
                android:layout_width="490dp"
                android:layout_height="match_parent">


                <ImageView
                    android:layout_width="490dp"
                    android:layout_height="190dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="200dp"
                    android:scaleType="fitXY"

                    android:src="@drawable/logoesgotecnica"
                    android:textStyle="bold"
                    android:typeface="serif" />



            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textAlignment="center"
                android:textColor="#000FFF"
                android:textSize="22sp"
                android:text="Detecção Eletrônica de Vazamento"

                android:textStyle="bold"
                android:typeface="serif" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="30sp"
                android:text="Caça Vazamento"

                android:textStyle="bold"
                android:typeface="serif" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">


                <ImageView
                    android:layout_width="340dp"
                    android:layout_height="200dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/cacavaza"
                    android:text="Ligue para nós" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textAlignment="center"
                android:textColor="#000"
                android:text="Video Inspeção"

                android:textSize="25sp"

                android:textStyle="bold"
                android:typeface="serif" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="17sp"
                android:textColor="#000" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textAlignment="center"
                android:textColor="#000FFF"
                android:textSize="25sp"
                android:text="Conta de Aguá Alta ?
Pode ser Vazamento!"

                android:textStyle="bold"
                android:typeface="serif" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="17sp"
                android:textColor="#000" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Localizamos e reparamos o vazamento."
                android:textAlignment="center"
                android:textSize="25sp"

                android:textColor="#000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="25sp"
                android:text="Utilizamos  aparelho eletrônico indicado pela Sabesp"
                android:textAlignment="center"
                android:textColor="#000" />

            <TextView

                android:textSize="17sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#000" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textAlignment="center"
                android:textColor="#000FFF"
                android:textSize="30sp"
                android:text="Central de Atendimento"

                android:textStyle="bold"
                android:typeface="serif" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(11)3925-0800"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="25sp" />

            <TextView
                android:textSize="25sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="fone:0800-755 9000"
                android:textAlignment="center"
                android:textColor="#000" />

            <TextView
                android:layout_width="398dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView9"
                android:layout_marginTop="14dp"
                android:layout_weight="0.02"
                android:text="     www.cacavazamento.srv.br"
                android:textAlignment="textStart"
                android:textColor="#000"
                android:textSize="25sp"
                android:textStyle="bold" />


                       <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="91dp">


                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="68dp"
                    android:layout_height="90dp"
                    android:src="@drawable/logo_insta"
                    android:text="Ligue para nós" />


                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="68dp"
                    android:layout_height="90dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@+id/imageView"
                    android:layout_toRightOf="@+id/imageView"
                    android:src="@drawable/logo_fb"
                    android:text="Ligue para nós" />

                <ImageView
                    android:layout_width="68dp"
                    android:layout_height="90dp"
                    android:layout_alignLeft="@+id/imageView5"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/imageView5"
                    android:layout_marginLeft="71dp"
                    android:layout_marginStart="71dp"
                    android:src="@drawable/logo_google"
                    android:text="Ligue para nós"
                    android:id="@+id/imageView6" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="68dp"
                    android:layout_height="90dp"
                    android:layout_alignBottom="@+id/imageView6"
                    android:layout_toEndOf="@+id/imageView6"
                    android:layout_toRightOf="@+id/imageView6"
                    android:src="@drawable/logo_whatsapp"
                    android:text="Ligue para nós" />

                <ImageView
                    android:layout_width="68dp"
                    android:layout_height="90dp"
                    android:layout_alignTop="@+id/imageView7"
                    android:layout_toEndOf="@+id/imageView7"
                    android:layout_toRightOf="@+id/imageView7"
                    android:src="@drawable/logo_viber"
                    android:text="Ligue para nós" />


            </RelativeLayout>


            <Button
                android:id="@+id/btnVoltar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textAlignment="center"
                android:textColor="#000FFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="serif"
                android:text="Voltar"/>




        </LinearLayout>
    </ScrollView>


    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slImages"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <com.daimajia.slider.library.Indicators.PagerIndicator
        android:id="@+id/custom_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:layout_marginTop="-15dp"
        />

    <ImageView
        android:id="@+id/btnaudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="187dp"
        android:background="@drawable/audiotexto"
        android:text="AudioTexto" />


</RelativeLayout>







