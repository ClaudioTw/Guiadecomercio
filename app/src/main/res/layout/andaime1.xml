<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundoprinc1"

    tools:context=".Andaime1">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:orientation="vertical"
            android:weightSum="1"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="200dp"
                    android:scaleType="fitXY"

                    android:src="@drawable/andaime1"
                    android:textStyle="bold"
                    android:typeface="serif" />


                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textView10"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="50dp"
                    android:text="AL BATISTA"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="35sp"
                    android:textStyle="bold" />


            </RelativeLayout>


               <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ALUGUEL E VENDAS DE ANDAIMES"
                android:textAlignment="center"
                android:textColor="#ff0059"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#ff0059"
                android:textSize="10sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="COLUNAS - VIGAS - BALDRAMES - CIMENTO - CALL - SAPATAS SOB MEDIDA."
                android:textAlignment="center"
                android:textColor="#ff0059"
                android:textSize="20sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">


                <ImageView
                    android:layout_width="340dp"
                    android:layout_height="200dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY"
                    android:background="@drawable/andaimes"
                    android:text="Ligue para nós" />
            </RelativeLayout>



            <TextView

                android:textSize="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Preços de Fábrica!!!"
                android:textAlignment="center"
                android:textStyle="bold"

                android:textColor="#000FFF"
                android:textSize="30sp" />



            <TextView
                android:textSize="25sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aceitamos os cartões:"
                android:textAlignment="center"
                android:textStyle="bold"

                android:textColor="#fff" />
            <TextView
                android:textSize="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#000" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">


                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/cartoes" />


            </RelativeLayout>
            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Entre em contato conosco."
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="30sp"

                android:textColor="#fff" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="10sp"

                android:textColor="#000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(11)3904-1277"
                android:textAlignment="center"
                android:textColor="#ff0059"
                android:textStyle="bold"
                android:textSize="25sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(11)2843-9257"
                android:textAlignment="center"
                android:textColor="#ff0059"
                android:textStyle="bold"
                android:textSize="25sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estrada Turística do Jaraguá nº 65 A"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="20sp" />
            <TextView
                android:textSize="25sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jardim Monte Alegre"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#fff" />

            <TextView
                android:textSize="25sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pirituba SP"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#fff" />





            <RelativeLayout
                android:layout_width="600dp"
                android:layout_height="91dp">


                <ImageView
                    android:id="@+id/imageView"
                    android:onClick="insta"

                    android:layout_width="68dp"
                    android:layout_height="90dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/logo_insta"
                    android:text="Ligue para nós" />


                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="68dp"
                    android:layout_height="90dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@+id/imageView"
                    android:layout_toRightOf="@+id/imageView"
                    android:src="@drawable/logo_fb"
                    android:onClick="face"
                    android:text="Ligue para nós" />

                <ImageView
                    android:layout_width="68dp"
                    android:layout_height="90dp"
                    android:layout_alignLeft="@+id/imageView5"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/imageView5"
                    android:layout_marginLeft="71dp"
                    android:layout_marginStart="71dp"
                    android:src="@drawable/logo_google"
                    android:text="Ligue para nós"
                    android:onClick="google"
                    android:id="@+id/imageView6" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:onClick="what"
                    android:layout_width="68dp"
                    android:layout_height="90dp"
                    android:layout_alignBottom="@+id/imageView6"
                    android:layout_toEndOf="@+id/imageView6"
                    android:layout_toRightOf="@+id/imageView6"
                    android:src="@drawable/logo_whatsapp"
                    android:text="Ligue para nós" />

                <ImageView
                    android:id="@+id/ideMaill"
                    android:onClick="email"
                    android:layout_width="68dp"
                    android:layout_height="90dp"
                    android:layout_alignTop="@+id/imageView7"
                    android:layout_toEndOf="@+id/imageView7"
                    android:layout_toRightOf="@+id/imageView7"
                    android:src="@drawable/emaillogo"
                    android:text="Ligue para nós" />


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="91dp">

                <EditText
                    android:id="@+id/idNumtxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="89dp"
                    android:ems="10"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/idbtnCall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textAlignment="center"
                    android:textColor="#000FFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:onClick="btnCall"
                    android:text="Telefone 1"/>

                <Button
                    android:id="@+id/idbtnCall2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/idbtnCall"
                    android:fontFamily="sans-serif"
                    android:onClick="btnCall2"
                    android:text="Telefone 2"
                    android:textAlignment="center"
                    android:textColor="#000FFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:typeface="serif" />


            </RelativeLayout>



        </LinearLayout>
    </ScrollView>


    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slImages"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <com.daimajia.slider.library.Indicators.PagerIndicator
        android:id="@+id/custom_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:layout_marginTop="-15dp"
        />

    <ImageView
        android:id="@+id/btnaudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="187dp"
        android:background="@drawable/audiotexto"
        android:text="AudioTexto" />


</RelativeLayout>








