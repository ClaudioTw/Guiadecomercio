<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fundo333"

    android:scrollbars="vertical"


    >

    <android.support.v7.widget.CardView

        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/foto2"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/advocacia1" />


                <TextView
                    android:id="@+id/titulo02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="60dp"
                    android:maxLines="3"
                    android:padding="4dp"

                    android:text="VALEZI &amp; GARCIA
"
                    android:textAlignment="center"
                    android:textColor="#fff000"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/titulo02"
                    android:layout_alignRight="@+id/titulo02"
                    android:layout_below="@+id/titulo02"
                    android:layout_marginEnd="37dp"
                    android:layout_marginRight="37dp"
                    android:text="Advogados"
                    android:textAlignment="center"
                    android:textColor="#000fff"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <TextView
                android:layout_width="400sp"
                android:layout_height="30sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:maxLines="3"
                android:padding="4dp"
                android:background="@drawable/fundoprinc"

                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="22dp"
                android:textStyle="bold" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/foto3"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/advogados" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="47dp"
                    android:maxLines="3"
                    android:padding="4dp"
                    android:text="A &amp; N GUIMARÃES"
                    android:textAlignment="center"
                    android:textColor="#000fff"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:id="@+id/textView5" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView5"
                    android:layout_centerHorizontal="true"
                    android:maxLines="3"
                    android:padding="8dp"
                    android:text="Assessoria Jurídica"
                    android:textAlignment="center"
                    android:textColor="#000fff"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="Advogados"
                    android:textAlignment="center"
                    android:textColor="#000fff"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <TextView
                android:layout_width="400sp"
                android:layout_height="30sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:maxLines="3"
                android:padding="4dp"
                android:background="@drawable/fundoprinc"

                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="22dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/foto4"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/advocacia2" />


                <TextView
                    android:id="@+id/titulo3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:maxLines="3"
                    android:padding="4dp"
                    android:text=" MOREIRA &amp; DOMINGUES"
                    android:textAlignment="center"
                    android:textColor="#fff000"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/titulo3"
                    android:layout_alignRight="@+id/titulo3"
                    android:layout_below="@+id/titulo3"
                    android:maxLines="3"
                    android:padding="8dp"
                    android:text="Assessoria Jurídica"
                    android:textAlignment="center"
                    android:textColor="#000fff"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView3"
                    android:layout_centerHorizontal="true"
                    android:text="Advogados"
                    android:textAlignment="center"
                    android:textColor="#000fff"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            </RelativeLayout>
            <TextView
                android:layout_width="400sp"
                android:layout_height="50sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:maxLines="3"
                android:padding="4dp"
                android:background="@drawable/fundoprinc"

                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="22dp"
                android:textStyle="bold" />



        </LinearLayout>
    </android.support.v7.widget.CardView>

</ScrollView>
